<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMainCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:onClick="locationUpdateClick"
        android:text="Location updates"
        app:layout_constraintBottom_toTopOf="@+id/btnMainMap"
        app:layout_constraintStart_toStartOf="@+id/btnMainMap" />

    <Button
        android:id="@+id/btnMainMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:onClick="mapExampleClick"
        android:text="Map and Location example"
        app:layout_constraintBottom_toTopOf="@+id/btnMainPoi"
        app:layout_constraintStart_toStartOf="@+id/btnMainPoi" />

    <Button
        android:id="@+id/btnMainPoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="94dp"
        android:layout_marginTop="318dp"
        android:text="Point Of Interest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:text="Map Only Example"
        android:onClick="gotoMapOnly"
        app:layout_constraintStart_toStartOf="@+id/btnMainPoi"
        app:layout_constraintTop_toBottomOf="@+id/btnMainPoi" />

    <TextView
        android:id="@+id/tvMainLatLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location is:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

</androidx.constraintlayout.widget.ConstraintLayout>